<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      s</button>
      <figure id="logo" class="columns six" data-hook><%= logo img_options: { class: 'img-responsive', width: '138' }%></figure>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
          <% @taxonomies.each do |taxonomy| %>
            <li class="dropdown">
                <%= link_to '#', data: { toggle: "dropdown" }, "aria-haspopup" => 'true' do %>
                    <%= taxonomy.name %> <span class='caret'></span>
                <% end %>
                <%= nav_tree(taxonomy.root, @taxon, 1) %>
            </li>
          <% end %>

    </ul>
    <ul class='nav navbar-nav navbar-right'>
        <li>
            <li id="link-to-cart" data-hook>
              <noscript>
                <%= link_to Spree.t(:cart), '/cart' %>
              </noscript>
              &nbsp;
            </li>
            <script>Spree.fetch_cart('<%= j spree.cart_link_url %>')</script>
        </li>
    </ul>
</div>

  </div>
</nav>
